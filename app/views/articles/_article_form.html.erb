<div class="w-3/5 flex flex-col justify-center px-4">
  <%= form_with model: @article do |form| %> 
    <div class="flex flex-col justify-center items-center gap-2 px-3">
      <% if @article.errors.any? %>
        <div class="w-full h-auto border-red-500 border-2 border-dashed rounded-lg p-2 tracking-wider font-semibold">
          <% @article.errors.full_messages.each do |message| %>
            <p class="text-red-500 text-xs">
              ** <%= message %>
            </p>
          <% end %>
        </div>
      <% end %>

      <div class="w-full flex flex-col justify-center items-center gap-4 uppercase tracking-wider font-semibold py-4">
        <div class="w-full flex items-center gap-2">
          <%= form.label "Title", class:"w-1/4" %>
          <%= form.text_field :title, placeholder: "Enter Title...", class:"w-full bg-transparent rounded-lg border-2 border-slate-700 border-dotted p-2 font-serif" %>
        </div>

        <div class="w-full flex items-center justify-between gap-2">
          <%= form.label "Author", class:"w-1/4" %>
          <%= form.text_field :author_name, placeholder: "Enter Author's name...", class:"w-full bg-transparent rounded-lg border-2 border-slate-700 border-dotted p-2 font-serif" %>
        </div>

        <div class="w-full flex items-center justify-between gap-2">
          <%= form.label "Body", class:"w-1/4" %>
          <%= form.text_area :body, placeholder: "Enter text...", class:"resize-none w-full h-[10rem] bg-transparent rounded-lg border-2 border-slate-700 border-dotted overflow-y-auto p-2 font-serif font-light" %>
        </div>

        <%= form.button "Submit", class:"btn__main" %>
        <%= link_to "Home", articles_path, class:"btn__main flex justify-center items-center" %> 
      </div>
    </div>  
  <% end %>
</div>